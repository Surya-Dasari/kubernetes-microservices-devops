pipeline {
    agent any

    tools {
        maven 'maven-3'
        jdk 'jdk-17'
    }

    environment {
        IMAGE_NAME = "suryadasari31/user-service"
        IMAGE_TAG  = "${BUILD_NUMBER}"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build & Test') {
            steps {
                dir('services/user-service') {
                    sh 'mvn clean verify'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                dir('services/user-service') {
                    withSonarQubeEnv('sonarqube-local') {
                        sh '''
                          mvn sonar:sonar \
                          -Dsonar.projectKey=user-service \
                          -Dsonar.projectName=user-service
                        '''
                    }
                }
            }
        }

        stage('Quality Gate') {
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        stage('Deploy SNAPSHOT to Nexus') {
            steps {
                dir('services/user-service') {
                    sh 'mvn deploy'
                }
            }
        }

        stage('Docker Build') {
            steps {
                dir('services/user-service') {
                    script {
                        docker.build("${IMAGE_NAME}:${IMAGE_TAG}")
                    }
                }
            }
        }

        stage('Trivy Image Scan') {
            steps {
                sh """
                  trivy image \
                  --exit-code 1 \
                  --severity CRITICAL \
                  ${IMAGE_NAME}:${IMAGE_TAG}
                """
            }
        }

        stage('Docker Push') {
            steps {
                script {
                    docker.withRegistry(
                        'https://index.docker.io/v1/',
                        'dockerhub-creds'
                    ) {
                        sh "docker push ${IMAGE_NAME}:${IMAGE_TAG}"
                        sh "docker tag ${IMAGE_NAME}:${IMAGE_TAG} ${IMAGE_NAME}:latest"
                        sh "docker push ${IMAGE_NAME}:latest"
                    }
                }
            }
        }

        stage('Deploy to Kubernetes (DEV)') {
            steps {
                sh """
                  sed -i 's|IMAGE_TAG|${IMAGE_TAG}|g' k8s/user-service/deployment.yaml
                  /usr/local/bin/kubectl apply -n dev -f k8s/user-service/deployment.yaml
                  /usr/local/bin/kubectl apply -n dev -f k8s/user-service/service.yaml
                  /usr/local/bin/kubectl rollout status deployment/user-service -n dev
                """
            }
        }
    }

    post {
        failure {
            echo 'Pipeline failed. Image was NOT deployed.'
        }
        success {
            echo 'Pipeline succeeded. Image scanned, pushed, and deployed.'
        }
    }
}
